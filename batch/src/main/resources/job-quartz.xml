<!-- 		<bean:constructor-arg ref="sqlSessionFactory" /> -->
<!-- 	</bean:bean> -->
	<!-- spring batch context -->
	
	<!-- ############################################################################################## -->
    <!-- Import設定 -->
	<!-- ############################################################################################## -->
    <bean:import resource="/jobxml/importTxtToDb.xml"/>

</bean:beans>
